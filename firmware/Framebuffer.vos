(fn FramebufferRenderMonochromeBitmap (x y w h scale color ptr)
    /* thx ry, ur the best :3 */
    (int i j bit pixel)
    (= i 0)
    (while (u< i h)
        (= j 0)
        (while (u< j w)
            (= bit 0)
            (while (u< bit 8)
                (= pixel (& (>> (b@ (+ ptr (u* i (u/ w 8)) (u/ j 8))) (- 7 bit)) 1))
                (if (!= pixel 0)
                    (FramebufferDrawRect (+ x (u* (+ j bit) scale)) (+ y (u* (- h i) scale)) scale scale color)
                )
                (= bit (+ bit 1))
            )
            (= j (+ j 8))
        )
        (= i (+ i 1))
    )
)