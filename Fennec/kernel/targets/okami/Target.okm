MODULE Target;
    ASM "targets/okami/startup.S";
    ASM "targets/okami/string.S";
    EXTERN PROCEDURE memset, memcpy, invert: CHAR;

    PROCEDURE targetinit();
    BEGIN
        PUTINT(0B0000000H,1); (* Switch Framebuffer to 8-bit 1024x768 *)
        PUTINT(0B0000004H,0);
    END;

    PROCEDURE halt();
    BEGIN
        PUTINT(0B0000000H,0FFFFFFFFH); (* Mask Every Interrupt on the HTC *)
        WHILE 1 DO END;
    END;

END.